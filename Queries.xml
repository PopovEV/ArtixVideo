<?xml version="1.0" encoding="utf-8"?>
<QueryList>
  <Query name = "Показать позиции за период времени">
    <value select="select * from pos_log_master where date_begin &gt;= ${date_beg_par} and date_end  &lt;= ${date_end_par}" />
	<parameters>
		<parameter value = "date_beg_par" name = "Начальная дата и время: " type = "datetime"/>
		<parameter value = "date_end_par" name = "Конечная дата и время: " type = "datetime"/>
	</parameters>
  </Query>
  <Query name="Показать позицию по номеру чека">
    <value select="select * from pos_log_master where checkNum = ${СheckNum}" />
	<parameters>
		<parameter value = "СheckNum" name = "Номер чека: " type = "integer"/>
	</parameters>
  </Query>
  <Query name="Показать позицию по стоимости покупки">
    <value select="select * from pos_log_master where Amount = ${Amount}" />
      <parameters>
              <parameter value = "Amount" name = "Стоимость: " type = "decimal"/>
      </parameters>
  </Query>
  <Query name="Показать позицию по стоимости покупки">
    <value select="select * from pos_log_master where Amount = ${Amount}" />
      <parameters>
              <parameter value = "Amount" name = "Стоимость: " type = "decimal"/>
      </parameters>
  </Query>
 </QueryList>
